{
  "manifest_version": 3,
  "name": "Twitter Emoji Replacer",
  "version": "1.0",
  "description": "Replaces Twitter's emoji with standard, OS-implemented emoji on twitter.com and x.com.",
  "permissions": [
    "https://twitter.com/*",
    "https://x.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://twitter.com/*",
        "https://x.com/*"
      ],
      "js": ["content.js"]
    }
  ],
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*"
  ]
}
